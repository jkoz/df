XTerm.vt100.translations: #override\n\
    Shift <KeyPress> Select:select-cursor-start() select-cursor-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
    Shift <KeyPress> Insert:insert-selection(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
    ~Ctrl ~Meta <Btn2Up>:insert-selection(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
    <BtnUp>:select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n
XTerm*font: -misc-fixed-medium-r-normal--15-140-75-75-c-90-iso10646-1
XTerm*internalBorder: 3
XTerm*loginShell: true
XTerm*scrollBar: false
XTerm*scrollKey: true
XTerm*saveLines: 1000
XTerm*multiClickTime: 250
XTerm*borderLess:true
XTerm*pointerColor: red
XTerm*background: black
XTerm*foreground: white
XTerm*cursorColor: grey
XTerm*pointerColorBackground: black

!VT100.modifyCursorKeys:0

Xcursor.theme: DMZ-White
!Xcursor.size: 20

!URxvt*borderLess:true
!URxvt*tintColor: Blue

URxvt*transparent: true
URxvt*shading: 100
URxvt.depth: 32
!URxvt.background: rgba:1111/1111/1111/dddd
!URxvt.background: [95]#000000

! Specifies the terminal type name to be set in the TERM environment variable
URxvt*termName: xterm-256color

! Create the window with the specified X window geometry [default 80x24]
!URxvt*geometry: 130x40

! enable clickable links
URxvt.urlLauncher: /usr/bin/chromium-browser
URxvt.matcher.button: 1

!urxvt scrolling options and cursor style:
URxvt*scrollBar: false
!URxvt*saveLines: 10000
!URxvt*scrollstyle:plain
!URxvt*cursorBlink: true
!URxvt*cursorUnderline: true
!URxvt*scrollBar_right: true

! border
!URxvt.borderColor: #000030
!URxvt.internalBorder:   0


!URxvt.letterSpace: -1

!Disables the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
URxvt.iso14755:         False


! fonts
URxvt*font: xft:Inconsolata:pixelsize=15
URxvt*boldFont: xft:Inconsolata:bold:pixelsize=15


!urxvt color scheme:
URxvt*background: #2B2B2B
URxvt*foreground: #DEDEDE
URxvt*colorUL: #86a2b0
URxvt.color0:           #3f3f3f
URxvt.color1:           #705050
URxvt.color2:           #00b45a
URxvt.color3:           #dfcf8f
URxvt.color4:           #506070
URxvt.color5:           #dc8cc3
URxvt.color6:           #8cd0d3
URxvt.color7:           #dcdccc
URxvt.color8:           #709080
URxvt.color9:           #cc5454
URxvt.color10:          #4d9f4d
URxvt.color11:          #f0dfaf
URxvt.color12:          #4186be
URxvt.color13:          #ec93d3
URxvt.color14:          #93e0e3
URxvt.color15:          #ffffff


! icons
URxvt.iconFile: /usr/share/icons/Humanity/apps/16/terminal.svg


! perl extension
!URxvt.perl-ext-common: default,matcher,tabbed,clipboard
URxvt.perl-ext-common: default,matcher,clipboard


! Keycode fixes for Ctrl+direction in Vim
URxvt.keysym.C-Up:     \033[1;5A
URxvt.keysym.C-Down:   \033[1;5B
URxvt.keysym.C-Right:  \033[1;5C
URxvt.keysym.C-Left:   \033[1;5D
URxvt.keysym.C-Prior:  \033[5;5~
URxvt.keysym.C-Next:   \033[6;5~
URxvt.keysym.C-Home:   \033[7;5~
URxvt.keysym.C-End:    \033[8;5~
URxvt.keysym.Shift-Control-V: perl:clipboard:paste


! urxvt tabs settings:
!URxvt.tabbed.tabbar-fg: 3
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 7
!URxvt.tabbed.tab-bg: 8
!URxvt.tabbed.autohide: yes
!URxvt.tabbed.new-button: no
!URxvt.tabbed.title: no
!URXvt.tabbed.reopen-on-close: yes

!tabbedex
!URxvt.keysym.Control-t: perl:tabbedex:new_tab
!URxvt.keysym.Control-Tab: perl:tabbedex:next_tab
!URxvt.keysym.Control-Shift-Tab: perl:tabbedex:prev_tab
