all_nics=$(ip addr show | cut -d ' ' -f2 | tr -d :)
all_nics=(${all_nics[@]//lo/})

for nic in ${all_nics[@]}; do
    # Parse IP address for the NIC.
    lan_ip=$(ip addr show ${nic} | grep '\<inet\>' | tr -s ' ' | cut -d ' ' -f3)
    # Trim the CIDR suffix.
    lan_ip=${lan_ip%/*}
    [ -n "$lan_ip" ] && break
done

if [ -n "$lan_ip" ]; then
    echo "â“› ${lan_ip}"
    return 0
else
    return 1
fi
